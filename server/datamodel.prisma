type Loan {
  id: ID! @id
  loanAmount: Float!
  name: String!
  payments: [Payment!]! @relation(link: TABLE, onDelete: CASCADE)
  periodInterestRate: Float!
  periods: Int!
  periodType: PeriodType!
  scenarios: [Scenario!]! @relation(link: TABLE, onDelete: CASCADE)
  startDate: DateTime!
}

type Payment {
  date: DateTime!
  id: ID! @id
  interest: Float!
  loan: Loan!
  note: String! @default(value: "")
  principal: Float!
}

enum PeriodType {
  Monthly
  Yearly
}

type Scenario {
  additionalPayments: [ScenarioPayment!]! @relation(link: TABLE, onDelete: CASCADE)
  id: ID! @id
  loan: Loan!
  name: String!
}

type ScenarioPayment {
  from: DateTime!
  id: ID! @id
  principalAmount: Float!
  scenario: Scenario!
  to: DateTime
}
